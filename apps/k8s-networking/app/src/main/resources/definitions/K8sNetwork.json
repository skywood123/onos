{
  "type": "object",
  "description": "A network object.",
  "required": [
    "networkId",
    "type",
    "name",
    "segmentId",
    "gatewayIp",
    "cidr",
    "mtu"
  ],
  "properties": {
    "networkId": {
      "type": "string",
      "example": "a87cc70a-3e15-4acf-8205-9b711a3531b7",
      "description": "The ID of the attached network."
    },
    "type": {
      "type": "string",
      "example": "MINION",
      "description": "Type of kubernetes node."
    },
    "name": {
      "type": "string",
      "example": "my_network",
      "description": "The name of network."
    },
    "segmentId": {
      "type": "string",
      "example": "1",
      "description": "Segment ID of tenant network."
    },
    "gatewayIp": {
      "type": "string",
      "example": "10.10.10.1",
      "description": "The IP address of the gateway."
    },
    "cidr": {
      "type": "string",
      "example": "32",
      "description": "The CIDR of this network."
    },
    "mtu": {
      "type": "integer",
      "example": 1500,
      "description": "The Maximum Transmission Unit of this network."
    }
  }
}